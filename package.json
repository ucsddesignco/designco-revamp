{
  "name": "designco-revamp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint-fix": "next lint --fix && prettier --write .",
    "lint-check": "next lint && prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "focus-trap-react": "^10.2.3",
    "keen-slider": "^6.8.6",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.71.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html}": [
      "eslint . --fix --report-unused-disable-directives --max-warnings 0",
      "eslint . --report-unused-disable-directives --max-warnings 0",
      "prettier . --write"
    ],
    "*.{scss, css, yml}": "prettier . --write"
  }
}
